{
  "name": "glabix-screen",
  "productName": "Glabix Screen",
  "version": "0.0.20",
  "author": "Glabix",
  "description": "A tool to record your screen",
  "main": ".vite/build/main.js",
  "scripts": {
    "start": "dotenvx run --env-file=.env -- electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "prepare": "husky",
    "make:win": "electron-forge make --platform win32 --arch x64",
    "make:mac-intel": "electron-forge make --platform darwin --arch x64",
    "make:mac-m1": "electron-forge make --platform darwin --arch arm64",
    "make:mac-universal": "electron-forge make --platform darwin --arch universal",
    "build": "electron-builder --config electron-builder.config.js",
    "dist": "npm run package && npm run build -- --mac --windows",
    "dist:win": "npm run package && npm run build -- --windows",
    "dist:mac-intel": "npm run package && npm run build -- --mac dmg:x64",
    "dist:mac-m1": "npm run package && npm run build -- --mac dmg:arm64",
    "release": "npm run package && npm run build -- --mac --windows -c.compression=maximum -p always"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.8.0",
    "axios": "^1.7.4",
    "electron-log": "^5.1.7",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.2.1",
    "konva": "^9.3.14",
    "modern-normalize": "^3.0.0",
    "moveable": "^0.53.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron-forge/plugin-vite": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "@electron/notarize": "^2.4.0",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "electron": "31.4.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.25.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.9",
    "prettier": "3.3.3",
    "sass-embedded": "^1.77.8",
    "ts-node": "^10.0.0",
    "typescript": "~5.5.4",
    "vite": "^5.0.12"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
